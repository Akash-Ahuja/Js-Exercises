//LOGICAL OPERATORS

// &&  "AND"

function sportsDay(temperature, weather) {
    if (temperature === 80 && weather === "Sunny") {
        console.log("Its a great day to play Cricket!");
    } else if (temperature === 80 && weather === "Rainy") {
        console.log("Good day to play but gotta wait for the rain to stop!");
    } else {
        console.log("Its brick outisde. Stay home!");
    }
};

sportsDay(70, "Cold");
sportsDay(80, "Sunny");

/*Challenge 6!!  Once again fill in the arguments to understand what output you will go with the || operator.
 Feel free to change around code to get the correct message.
 */

// || "OR"

function planDay(weather, mood) {
    if(weather === "sunny" || mood > 8) {
        console.log("The josh is high! Lets go!!");
    } else if(weather === "Freezing" || mood < 4) {
        console.log("Nah, lets skip today!");
    } else if(weather === "Cold" || mood <= 7) {
        console.log("Gotta push myself harder!");
    } else{
        console.log("ERROR 404!, I never go out for run!");
    }
};

planDay("Freezing", 2);
planDay("Cold", 6);
planDay("sunny", 9);

//Challenge 7!!  Use the ! operator in the if() statement.  See what output you get.

function beautifulDay(sky, clouds) {
    if (sky === "clear" && clouds != true) {
        console.log("Lets hangout today!");
    } else {
        console.log("It's not a good idea to go out today");
    }
};

beautifulDay("clear", false);

