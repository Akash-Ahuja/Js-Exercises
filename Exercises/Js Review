// Challenge 3!!  Fill in the argument for num in the function and get it to print out the correct log.

// GREATER THAN 10
    
function greaterThanTen(num) {
    if (num > 10) {
        console.log("Number is greater than 10", num);
    } else {
        console.log("Number is less than 10", num);
    }
};

greaterThanTen(12);
greaterThanTen(2);

